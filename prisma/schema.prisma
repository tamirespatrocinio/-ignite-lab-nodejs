generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Notification {
  id          String    @id
  recipientId String // equivale chave estrangeira - criar o nome referenciando o
  content     String //conte√∫do
  category    String
  readAt      DateTime? // "?" deixa nulo 
  createdAt   DateTime  @default(now())

  @@index([recipientId])
}
